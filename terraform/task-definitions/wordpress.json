[
    {
        "name": "wordpress",
        "image": "jfusterm/wp-packer:4.5",
        "cpu": 10,
        "memory": 300,
        "essential": true,
        "portMappings": [
             {
                 "hostPort": 80,
                 "containerPort": 80,
                 "protocol": "tcp"
             }
         ],
        "links": [],
        "command": [
            "supervisord"
         ],
        "entryPoint": [
            "/entrypoint.sh"
         ],
        "environment": [
          {
            "name": "WORDPRESS_DB_HOST",
            "value": "${db_host}"
          },
          {
            "name": "WORDPRESS_DB_USER",
            "value": "${db_user}"
          },
          {
            "name": "WORDPRESS_DB_PASSWORD",
            "value": "${db_password}"
          },
          {
            "name": "WORDPRESS_DB_NAME",
            "value": "${db_name}"
          },
          {
            "name": "WORDPRESS_TITLE",
            "value": "${wp_title}"
          },
          {
            "name": "WORDPRESS_USER",
            "value": "${wp_user}"
          },
          {
            "name": "WORDPRESS_PASSWORD",
            "value": "${wp_password}"
          },
          {
            "name": "WORDPRESS_MAIL",
            "value": "${wp_mail}"
          }
        ],
        "mountPoints": null,
        "volumesFrom": null,
        "extraHosts": null,
        "logConfiguration": null,
        "ulimits": null,
        "dockerLabels": null
    }
]
